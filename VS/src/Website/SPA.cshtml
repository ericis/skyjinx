<!DOCTYPE html>
<html lang="en" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SkyJinx</title>
    <link rel="stylesheet" href="~/app/css/main.min.css" />
    @*<link rel="shortcut icon" href="~/app/favicon.png" type="image/x-icon" />*@
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @*<div ng-view></div>*@
    <div class="container">
        {{'SkyJinx says: ' + ' hello ASP.NET MVC + RequireJS + AngularJS + Bootstrap + jQuery!'}}
    </div>
    <script>
        var require = {
            paths: {
                'jquery': ['//code.jquery.com/jquery-2.0.3.min', '@Url.Require("~/Scripts/jquery-2.0.3.min.js")'],
                'bootstrap': ['@Url.Require("~/Scripts/bootstrap.min.js")'],
                'angular': ['//ajax.googleapis.com/ajax/libs/angularjs/1.2.2/angular.min', '@Url.Require("~/Scripts/angular.min.js")'],
                'angular-route': ['//ajax.googleapis.com/ajax/libs/angularjs/1.2.2/angular-route.min', '@Url.Require("~/Scripts/angular-route.min.js")'],
                'angular-animate': ['//ajax.googleapis.com/ajax/libs/angularjs/1.2.2/angular-animate.min', '@Url.Require("~/Scripts/angular-animate.min.js")']
            },
            shim: {
                'bootstrap': {
                    deps: ['jquery']
                },
                'angular': {
                    exports: 'angular'
                },
                'angular-route': {
                    deps: ['angular']
                },
                'angular-animate': {
                    deps: ['angular']
                }
            }
        };
    </script>
    <script data-main="@Url.Require("~/app/js/main.min.js")" src="~/Scripts/require.js"></script>
</body>
</html>